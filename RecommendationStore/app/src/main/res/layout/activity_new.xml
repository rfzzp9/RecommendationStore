            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/storeLayout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/visitRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:text="성장기반자금"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="소공인특화자금"
                    android:textColor="@color/app_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/visitRanking"
                    app:layout_constraintTop_toBottomOf="@+id/visitRanking" />

                <ImageView
                    android:id="@+id/starBtn3"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/starbtn"
                    app:layout_constraintStart_toEndOf="@+id/text"
                    app:layout_constraintTop_toTopOf="@+id/text"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="6dp"
                    />

                <TextView
                    android:id="@+id/text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="(대리대출) 제조업을 영위하는 상시근로자수 10인 미만의 소상공인"
                    android:textColor="@color/app_color"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/visitRanking"
                    app:layout_constraintTop_toBottomOf="@+id/text" />

                <TextView
                    android:id="@+id/text23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="- 기준금리: 2.89%      - 접수기간 : 상시접수"
                    android:textColor="@color/app_color"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/visitRanking"
                    app:layout_constraintTop_toBottomOf="@+id/text22" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
