                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="(직접대출) 수출 소상공인, 사회적경제기업, 로컬 크리에이터"
                    android:textColor="@color/app_color"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/visitRanking1"
                    app:layout_constraintTop_toBottomOf="@+id/text1" />

                <TextView
                    android:id="@+id/text231"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="- 기준금리: 3.27%      - 접수기간 : 상시접수"
                    android:textColor="@color/app_color"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/visitRanking1"
                    app:layout_constraintTop_toBottomOf="@+id/text221" />

                <TextView
                    android:id="@+id/amount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="최대 30,000(만원)"
                    android:textColor="@color/app_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"
