<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Imageview_Anonymous_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/anonymous_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.07" />

    <TextView
        android:id="@+id/Textview_Nickname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="익명"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Imageview_Anonymous_image"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_default="wrap" />

    <ImageView
        android:id="@+id/Imageview_Options_backgroundimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/options_backgroundimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.25" />

    <ImageView
        android:id="@+id/Imageview_Options_replyicon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/options_replyicon"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/Imageview_Options_backgroundimage"
        app:layout_constraintStart_toStartOf="@+id/Imageview_Options_backgroundimage"
        app:layout_constraintEnd_toStartOf="@id/Imageview_Options_likeicon"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_Options_backgroundimage"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.055"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2" />

    <ImageView
        android:id="@+id/Imageview_Options_likeicon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/options_likeicon"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/Imageview_Options_backgroundimage"
        app:layout_constraintStart_toEndOf="@+id/Imageview_Options_replyicon"
        app:layout_constraintEnd_toStartOf="@+id/Imageview_Options_setting"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_Options_backgroundimage"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.055"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2"/>

    <ImageView
        android:id="@+id/Imageview_Options_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/options_setting"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/Imageview_Options_backgroundimage"
        app:layout_constraintStart_toEndOf="@+id/Imageview_Options_likeicon"
        app:layout_constraintEnd_toEndOf="@id/Imageview_Options_backgroundimage"
        app:layout_constraintBottom_toBottomOf="@id/Imageview_Options_backgroundimage"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.055"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2" />

    <TextView
        android:id="@+id/Textview_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="내용\n내용"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/Imageview_Anonymous_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap" />

    <TextView
        android:id="@+id/Textview_Time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="18.12.20 02:41"
        android:textColor="@color/LightGray"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/line"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Textview_Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"/>

</androidx.constraintlayout.widget.ConstraintLayout>