<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:id="@+id/navigation_nested"
    android:fillViewport="true"
    android:overScrollMode="never"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        >

        <ImageView
            android:id="@+id/title"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            />

        <ImageView
            android:id="@+id/exit"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:src="@drawable/exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="27dp"
            android:layout_marginStart="13dp"
            />

        <ImageView
            android:id="@+id/text"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />

        <EditText
            android:id="@+id/email"
            android:background="@drawable/edittext_border"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="320dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"
            android:layout_marginTop="6dp"
            android:hint="이메일을 입력하세요."
            android:paddingStart="6dp"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/pwd"
            android:background="@drawable/edittext_border"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="320dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginTop="7dp"
            android:hint="비밀번호를 입력하세요."
            android:paddingStart="6dp"
            android:inputType="textPassword"
            />

        <ImageView
            android:id="@+id/text2"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/pwd"
            />

        <View
            android:id="@+id/img"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/edittext_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            />

        <ImageView
            android:id="@+id/checkbox"
            android:src="@drawable/checkbox"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintStart_toStartOf="@+id/img"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="@+id/img"
            />

        <ImageView
            android:id="@+id/text3"
            android:src="@drawable/text11"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="11dp"
            app:layout_constraintTop_toTopOf="@+id/img"
            app:layout_constraintBottom_toBottomOf="@+id/img"
            />

        <ImageView
            android:id="@+id/check1"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/img"
            />

        <ImageView
            android:id="@+id/text4"
            android:src="@drawable/text12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="1dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/img"
            />

        <ImageView
            android:id="@+id/check2"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check1"
            />

        <ImageView
            android:id="@+id/text5"
            android:src="@drawable/text13"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="1dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="@+id/text4"
            />

        <ImageView
            android:id="@+id/check3"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check2"
            />

        <ImageView
            android:id="@+id/text6"
            android:src="@drawable/text14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="1dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="@+id/text5"
            />

        <ImageView
            android:id="@+id/check4"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check3"
            />

        <ImageView
            android:id="@+id/text7"
            android:src="@drawable/text15"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="1dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="@+id/text6"
            />

        <ImageView
            android:id="@+id/check5"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check4"
            />

        <ImageView
            android:id="@+id/text8"
            android:src="@drawable/text16"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="1dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="@+id/text7"
            />

        <ImageView
            android:id="@+id/check6"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check5"
            />

        <ImageView
            android:id="@+id/check7"
            android:src="@drawable/check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/checkbox"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check6"
            />

        <ImageView
            android:id="@+id/text9"
            android:src="@drawable/text17"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="13dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/text8"
            />

        <ImageView
            android:id="@+id/text10"
            android:src="@drawable/text18"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/checkbox"
            android:layout_marginStart="13dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="@+id/text9"
            />

        <ImageView
            android:id="@+id/text11"
            android:src="@drawable/text19"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/text2"

           android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="@+id/text10"
            />

        <ImageView
            android:id="@+id/joinBtn"
            android:src="@drawable/joinbtn2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginBottom="38dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>